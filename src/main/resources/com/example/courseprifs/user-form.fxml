<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane prefHeight="538.0" prefWidth="620.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.courseprifs.fxControllers.UserForm">
   <children>
      <Pane layoutX="39.0" layoutY="38.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="175.0" prefWidth="382.0">
         <children>
            <RadioButton fx:id="userRadio" layoutX="18.0" layoutY="18.0" mnemonicParsing="false" onAction="#disableFields" selected="true" text="User">
               <toggleGroup>
                  <ToggleGroup fx:id="Select" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="restaurantRadio" layoutX="96.0" layoutY="18.0" mnemonicParsing="false" onAction="#disableFields" text="Restaurant" toggleGroup="$Select" />
            <RadioButton fx:id="clientRadio" layoutX="197.0" layoutY="18.0" mnemonicParsing="false" onAction="#disableFields" text="Client" toggleGroup="$Select" />
            <RadioButton fx:id="driverRadio" layoutX="292.0" layoutY="18.0" mnemonicParsing="false" onAction="#disableFields" text="Driver" toggleGroup="$Select" />
            <TextField fx:id="usernameField" layoutX="22.0" layoutY="56.0" promptText="Username" />
            <PasswordField fx:id="passwordField" layoutX="208.0" layoutY="56.0" promptText="Password" />
            <TextField fx:id="nameField" layoutX="22.0" layoutY="96.0" promptText="Name" />
            <TextField fx:id="surnameField" layoutX="208.0" layoutY="96.0" promptText="Surname" />
            <TextField fx:id="phoneField" layoutX="22.0" layoutY="137.0" promptText="Phone number" />
         </children>
      </Pane>
      <Button fx:id="saveButton" layoutX="210.0" layoutY="494.0" mnemonicParsing="false" onAction="#createNewUser" text="Save" />
      <Button fx:id="updateButton" layoutX="282.0" layoutY="494.0" mnemonicParsing="false" onAction="#updateUser" text="Update" />
      <ComboBox fx:id="vehicleTypeComboBox" layoutX="60.0" layoutY="361.0" prefWidth="150.0" promptText="Vehicle type" />
      <TextField fx:id="streetField" layoutX="61.0" layoutY="273.0" promptText="Street" />
      <TextField fx:id="cityField" layoutX="61.0" layoutY="239.0" promptText="City" />
      <TextField fx:id="postalField" layoutX="61.0" layoutY="309.0" promptText="Postal code" />
      <TextField fx:id="licenseField" layoutX="61.0" layoutY="407.0" promptText="License" />
      <DatePicker fx:id="bdatePicker" layoutX="244.0" layoutY="361.0" promptText="Birth date" />
      <Button fx:id="backUserButton" layoutX="361.0" layoutY="494.0" mnemonicParsing="false" onAction="#returnToForm" text="Back" />
   </children>
</AnchorPane>
